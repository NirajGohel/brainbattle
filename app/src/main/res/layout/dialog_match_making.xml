<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opponent Found"
        android:textColor="#fff"
        android:textSize="20sp"
        android:fontFamily="@font/gamefont_1"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.facebook.login.widget.ProfilePictureView
                android:id="@+id/player_ProfilePicture"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <ImageView
               android:id="@+id/android"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:src="@drawable/subtracted_circle"
               android:contentDescription="@null" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp">

            <TextView
                android:id="@+id/dio_player_name"
                android:fontFamily="@font/gamefont_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Htz_14"
                android:textStyle="bold"
                android:textColor="#3edf91"
                android:textSize="17sp"
                android:layout_marginBottom="4dp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V/S"
        android:textColor="#fff"
        android:textSize="20sp"
        android:fontFamily="@font/gamefont_1"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.facebook.login.widget.ProfilePictureView
                android:id="@+id/opponent_ProfilePicture"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <ImageView
                android:id="@+id/android1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/subtracted_circle"
                android:contentDescription="@null" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp">

            <TextView
                android:id="@+id/opponent_name"
                android:fontFamily="@font/gamefont_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Htz_14"
                android:textStyle="bold"
                android:textColor="#3edf91"
                android:textSize="17sp"
                android:layout_marginBottom="4dp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>